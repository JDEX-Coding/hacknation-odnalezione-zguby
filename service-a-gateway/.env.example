# Service A (Gateway) Configuration

# Server Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8080

# Paths
TEMPLATES_PATH=web/templates
STATIC_PATH=web/static

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/
RABBITMQ_EXCHANGE=lost-found.events

# MinIO Configuration (S3-compatible Object Storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=lost-items-images
MINIO_USE_SSL=false

# Vision API Configuration (OpenAI GPT-4o or compatible)
VISION_API_KEY=your-openai-api-key-here
VISION_API_ENDPOINT=https://api.openai.com/v1
VISION_MODEL=gpt-4o

# Logging
LOG_LEVEL=info
